{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@facade/common/data-access-common": [
        "libs/common/data-access-common/src/index.ts"
      ],
      "@facade/common/feature-layouts": [
        "libs/common/feature-layouts/src/index.ts"
      ],
      "@facade/common/websocket": ["libs/common/websocket/src/index.ts"],
      "@facade/feature-auth": ["libs/feature-auth/src/index.ts"],
      "@facade/system-feature/feature-homePage": [
        "libs/system-feature/feature-homePage/src/index.ts"
      ],
      "@facade/ui/components": ["libs/ui/components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
